{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./dist",
        "module": "commonjs",
        "sourceMap": false,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2016",
        "typeRoots": [
            "node_modules/@types"
        ],
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": [
            "es2017",
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
